
# Hosting configuration
VITE_HOSTING=vercel  # Options: vercel, hostinger, github

# API Configuration
VITE_API_URL=https://api.humanitieslast.com

# Base URL for GitHub Pages (leave empty for root)
VITE_BASE_URL=/

# Content Management System
VITE_CMS_TYPE=local-storage  # Options: local-storage, google-sheets, contentful, sanity, strapi

# Google Sheets (when using google-sheets CMS)
VITE_GOOGLE_SHEET_ID=your_sheet_id_here

# Contentful (when using contentful CMS)
VITE_CONTENTFUL_SPACE_ID=your_contentful_space_id
VITE_CONTENTFUL_ACCESS_TOKEN=your_contentful_access_token

# Sanity (when using sanity CMS)
VITE_SANITY_PROJECT_ID=your_sanity_project_id
VITE_SANITY_DATASET=production

# Authentication (for admin access)
VITE_ADMIN_USERNAME=your_admin_username
VITE_ADMIN_PASSWORD=your_secure_password
